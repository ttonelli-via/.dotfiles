theme = Dracula

# Override values to match Dracula Soft
background = "#292a35"

# Override Bright Black value to match Bright Black value in Dracula Soft
palette = 8=#7c7f8a

font-family = FiraCode Nerd Font
font-synthetic-style = false

# Disable ligatures
font-feature = -calt
font-feature = -clig
font-feature = -liga

# alternate 'l'
font-feature = cv10

# center aligned '*'
font-feature = cv16

font-size = 15

cursor-invert-fg-bg = false

adjust-cell-width = -5%
adjust-cell-height = 20%

macos-titlebar-style = tabs
macos-option-as-alt = true

mouse-hide-while-typing = true
window-save-state = always
